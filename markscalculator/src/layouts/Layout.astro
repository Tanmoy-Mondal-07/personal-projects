---
import { SEO } from "astro-seo";
import "../styles/global.css";
const {
	title = "SGPA to CGPA & Percentage Converter - Free Grade Calculator",
	description = "Instantly convert your SGPA, CGPA, or YGPA scores to percentage using customizable university formulas (VTU, CBSE, simple x10). Accurate for 10-point and 4-point scales.",
	keywords = "sgpa to cgpa, sgpa to percentage, cgpa to percentage, cgpa converter, sgpa calculator, cgpa calculator, grade converter, grade calculator, 10 point scale to percentage, gpa to percentage, percentage to cgpa, vtu cgpa conversion, cbse grade calculator",
	pageUrl = "https://personal-projects-djf.pages.dev/",
} = Astro.props;
const socialImage = "https://personal-projects-djf.pages.dev/og-image.jpg";
---

<!doctype html>
<html lang="en">
	<head>
		<SEO
			title={title}
			description={description}
			openGraph={{
				basic: {
					title,
					type: "website",
					image: socialImage,
				},
				optional: {
					description,
				},
			}}
			twitter={{
				card: "summary_large_image",
				title,
				description,
				image: socialImage,
			}}
			extend={{
				link: [
					{
						rel: "icon",
						type: "image/svg+xml",
						href: "/icon.png",
					},
					{ rel: "canonical", href: pageUrl },
				],

				meta: [
					{ name: "keywords", content: keywords },
					{ name: "generator", content: Astro.generator },
				],
			}}
		/>
	</head>

	<body
		class="min-h-screen bg-(--c1) text-(--c4) flex justify-center p-4"
	>
		<main class="w-full h-full max-w-5xl mx-auto py-8">
			<!-- Header -->
			<header class="text-center top-0 mb-10">
				<h1
					class="text-2xl md:text-4xl font-extrabold text-(--c3) mb-4"
				>
					Ultimate SGPA & CGPA to Percentage Calculator
				</h1>
				<p class="text-lg md:text-xl text-(--c4) max-w-2xl mx-auto">
					A fast, accurate, and customizable tool for converting your
					GPA scores to percentage equivalent, supporting 10-point and
					4-point scales.
				</p>
			</header>

			<!-- Main Calculator Slot -->
			<div class="flex justify-center">
				<slot />
			</div>

			<!-- Info Section -->
			<section
				class="mt-16 p-6 rounded-xl shadow-xl var(--c2) border border-(--c3)"
			>
				<h2 class="text-2xl font-bold text-(--c3) mb-4">
					How to Use the Grade Converter
				</h2>

				<p class="text-(--c4) leading-relaxed">
					Our free conversion tool simplifies the process of
					calculating your final percentage based on semester scores.
					Use the 'To Percentage' tab for conversion using standard
					formulas like the common
					<strong>(CGPA - 0.75) x 10</strong> method. Use the 'SGPA to
					CGPA' tab to average your semester scores and find your accumulated
					CGPA.
				</p>

				<h3 class="text-xl font-semibold text-(--c3) mt-6 mb-3">
					Why is Grade Conversion Important?
				</h3>

				<p class="text-(--c4)">
					Many higher education institutions and employers require a
					percentage equivalent, even if your university uses the
					SGPA/CGPA system. Using the correct formula ensures your
					application is accurate.
				</p>
			</section>
		</main>
	</body>
	<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "WebApplication",
			"name": "SGPA to CGPA & Percentage Converter",
			"url": "https://personal-projects-djf.pages.dev",
			"description": "Instant SGPA, CGPA, YGPA and percentage conversion with support for 10-point and 4-point scales using customizable university formulas (VTU, CBSE, simple x10).",
			"applicationCategory": "EducationalApplication",
			"operatingSystem": "All",
			"creator": {
				"@type": "Person",
				"name": "Tanmoy Mondal",
				"url": "https://tanmoymondal.pages.dev",
				"sameAs": [
					"https://github.com/Tanmoy-Mondal-07",
					"https://www.linkedin.com/in/tanmoy-mondal07"
				]
			}
		}
	</script>
</html>
